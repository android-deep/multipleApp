<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <ImageView
        android:id="@+id/menu_iv_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/icon_menu_detail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/menu_iv_vip_label"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_toRightOf="@+id/menu_iv_icon"
        android:src="@drawable/icon_menu_vip"
        app:layout_constraintLeft_toRightOf="@id/menu_iv_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/menu_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu_iv_icon"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="应用详情"
        android:textColor="#fff"
        android:textSize="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menu_iv_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>